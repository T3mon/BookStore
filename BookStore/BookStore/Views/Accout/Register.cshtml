@model BookStore.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="grid">
    <form asp-action="Register" class="form login">

        <header class="login__header">
            <h3 class="login__title">Register</h3>
        </header>

        <div class="login__body">

            <div class="form__field">
                <input asp-for="Login" type="text" placeholder="User Name" required>
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form__field">
                <input asp-for="Email" type="Email" placeholder="Email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form__field">
                <input asp-for="Password" type="password" placeholder="Password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

        </div>

        <footer class="login__footer">
            <input type="submit" value="Register">

        </footer>

    </form>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
