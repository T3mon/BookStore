@model IEnumerable<Domain.Models.Book>
    

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/product-styles.css" />

@foreach (var item in Model)
{
    <div class="col-lg-3 col-md-6 col-sm-10 offset-md-0 offset-sm-1">
        <div class="card">
            @if (item.LogoUrl != null)
            {
            <img class="card-img-top" src="@item.LogoUrl">
            }
            else
            {
            <img class="card-img-top" src="https://www.freepnglogos.com/uploads/cucumber-png/cucumber-png-image-purepng-transparent-png-26.png">
            }
            <div class="card-body">
                <h6 class="font-weight-bold pt-1">@item.Name</h6>
                <div class="text-muted description">@item.Description</div>
                <div class="d-flex align-items-center product"> <span class="fas fa-star"></span> <span class="fas fa-star"></span> <span class="fas fa-star"></span> <span class="fas fa-star"></span> <span class="far fa-star"></span> </div>
                <div class="d-flex align-items-center justify-content-between pt-3">
                    <div class="d-flex flex-column">
                        <div class="h6 font-weight-bold">@item.Price $</div>
                    </div>
                    <div class="btn btn-primary">Buy</div>
                </div>
            </div>
        </div>
    </div>
}
